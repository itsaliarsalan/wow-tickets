{
  "name": "wow-tickets",
  "version": "1.0.0",
  "description": "Marketplace to buy and sell event tickets.",
  "scripts": {
    "build": "if-env TYPE=server && (cd server && npm install) || (cd client && npm install && npm run build)",
    "start": "nodemon --watch server --exec node --experimental-modules server/server.js",
    "server": "node ./server/server.js",
    "client": "cd client && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aliarsalandev/woo-tickets.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aliarsalandev/woo-tickets/issues"
  },
  "homepage": "https://github.com/aliarsalandev/woo-tickets#readme",
  "dependencies": {
    "if-env": "^1.0.4",
    "nodemon": "^2.0.4"
  }
}
